<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/arm"
    android:transitionGroup="true"
    android:id="@+id/arm"
    android:backgroundTint="#ffffff">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/toggleButton"
        android:layout_alignEnd="@+id/textView4"
        android:phoneNumber="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:clickable="false"
        android:layout_below="@+id/seekBar2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/seekBar2"
        android:progressBackgroundTint="#E91E63"
        android:backgroundTint="#E91E63"
        android:backgroundTintMode="src_atop" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:indeterminate="false"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/toggleButton"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/toggleButton"
        android:splitTrack="false"
        android:progressBackgroundTint="#E91E63" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:layout_below="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar2"
        android:layout_alignStart="@+id/seekBar2"
        android:progressBackgroundTint="#E91E63" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar4"
        android:layout_below="@+id/seekBar3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/seekBar"
        android:progressBackgroundTint="#E91E63" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar5"
        android:layout_below="@+id/seekBar4"
        android:layout_alignEnd="@+id/seekBar3"
        android:layout_alignStart="@+id/seekBar3"
        android:progressBackgroundTint="#E91E63" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En espera"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/editText"
        android:layout_alignEnd="@+id/seekBar2"
        android:layout_marginEnd="27dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectar"
        android:id="@+id/toggleButton"
        android:background="#0024e9"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="9dp"
        android:layout_below="@+id/toggleButton"
        android:layout_alignParentEnd="true"
        android:text=" " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView3"
        android:layout_above="@+id/seekBar3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView4"
        android:layout_above="@+id/seekBar"
        android:layout_toStartOf="@+id/seekBar2"
        android:layout_marginEnd="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/seekBar3"
        android:layout_toStartOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView6"
        android:layout_above="@+id/seekBar5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Codo"
        android:id="@+id/textView7"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hombro"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Brazo"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mano"
        android:id="@+id/textView10"
        android:layout_above="@+id/seekBar3"
        android:layout_toEndOf="@+id/seekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MuÃ±eca"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/seekBar4" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="211dp"
        android:layout_marginStart="211dp"
        android:layout_marginBottom="123dp"
        android:id="@+id/linearLayout"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/grados"
        android:text=" "
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignLeft="@+id/seekBar5"
        android:layout_alignStart="@+id/seekBar5" />


</RelativeLayout>
